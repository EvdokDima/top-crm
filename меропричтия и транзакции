Код для MainWindow.xaml
<Window x:Class="CRM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRM"
        mc:Ignorable="d"
        Title="CRM System" Height="600" Width="1000">
    <Grid>
        <!-- Заголовок -->
        <TextBlock Text="Управление клиентами" FontSize="24" HorizontalAlignment="Center" Margin="0,10,0,0" />

        <!-- TabControl для отображения клиентов, мероприятий и транзакций -->
        <TabControl Margin="10,50,10,10">
            <!-- Вкладка "Клиенты" -->
            <TabItem Header="Клиенты">
                <DataGrid x:Name="ClientsDataGrid" AutoGenerateColumns="False" Margin="10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Имя" Binding="{Binding Name}" />
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" />
                        <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" />
                        <DataGridTextColumn Header="День рождения" Binding="{Binding Birthday, StringFormat=d}" />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Вкладка "Мероприятия" -->
            <TabItem Header="Мероприятия">
                <DataGrid x:Name="InteractionsDataGrid" AutoGenerateColumns="False" Margin="10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Тип" Binding="{Binding Type}" />
                        <DataGridTextColumn Header="Дата" Binding="{Binding Date, StringFormat=d}" />
                        <DataGridTextColumn Header="Клиент" Binding="{Binding ClientName}" />
                        <DataGridTextColumn Header="Заметки" Binding="{Binding Notes}" />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Вкладка "Транзакции" -->
            <TabItem Header="Транзакции">
                <DataGrid x:Name="DealsDataGrid" AutoGenerateColumns="False" Margin="10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Описание" Binding="{Binding Description}" />
                        <DataGridTextColumn Header="Сумма" Binding="{Binding Amount, StringFormat=C}" />
                        <DataGridTextColumn Header="Дата" Binding="{Binding Date, StringFormat=d}" />
                        <DataGridTextColumn Header="Клиент" Binding="{Binding ClientName}" />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>

        <!-- Кнопки для навигации -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
            <Button Content="Добавить клиента" Margin="10" Click="AddClientButton_Click" />
            <Button Content="Добавить мероприятие" Margin="10" Click="AddInteractionButton_Click" />
            <Button Content="Добавить транзакцию" Margin="10" Click="AddDealButton_Click" />
            <Button Content="Аналитика продаж" Margin="10" Click="ShowAnalyticsButton_Click" />
        </StackPanel>
    </Grid>
</Window>




















Код для MainWindow.xaml.cs
using System;
using System.Collections.Generic;
using System.Windows;

namespace CRM
{
    public partial class MainWindow : Window
    {
        // Списки данных (временное хранилище)
        private List<Client> _clients = new List<Client>();
        private List<Interaction> _interactions = new List<Interaction>();
        private List<Deal> _deals = new List<Deal>();

        public MainWindow()
        {
            InitializeComponent();

            // Загрузка тестовых данных
            LoadTestData();

            // Привязка данных к DataGrid
            ClientsDataGrid.ItemsSource = _clients;
            InteractionsDataGrid.ItemsSource = _interactions;
            DealsDataGrid.ItemsSource = _deals;
        }

        // Загрузка тестовых данных
        private void LoadTestData()
        {
            // Клиенты
            _clients.Add(new Client { Id = 1, Name = "Иван Иванов", Email = "ivan@example.com", Phone = "+7 999 123 45 67", Birthday = new DateTime(1990, 5, 15) });
            _clients.Add(new Client { Id = 2, Name = "Мария Петрова", Email = "maria@example.com", Phone = "+7 999 765 43 21", Birthday = new DateTime(1985, 10, 25) });
            _clients.Add(new Client { Id = 3, Name = "Алексей Сидоров", Email = "alex@example.com", Phone = "+7 999 555 55 55", Birthday = new DateTime(1995, 3, 10) });

            // Мероприятия
            _interactions.Add(new Interaction { Id = 1, ClientId = 1, Type = "Звонок", Date = DateTime.Now, Notes = "Обсуждение нового заказа", ClientName = "Иван Иванов" });
            _interactions.Add(new Interaction { Id = 2, ClientId = 2, Type = "Встреча", Date = DateTime.Now.AddDays(1), Notes = "Презентация продукта", ClientName = "Мария Петрова" });

            // Транзакции
            _deals.Add(new Deal { Id = 1, ClientId = 1, Description = "Заказ №123", Amount = 10000, Date = DateTime.Now, ClientName = "Иван Иванов" });
            _deals.Add(new Deal { Id = 2, ClientId = 2, Description = "Заказ №124", Amount = 15000, Date = DateTime.Now.AddDays(1), ClientName = "Мария Петрова" });
        }

        // Обработчик кнопки "Добавить клиента"
        private void AddClientButton_Click(object sender, RoutedEventArgs e)
        {
            MessageBox.Show("Функция добавления клиента будет реализована позже.");
        }

        // Обработчик кнопки "Добавить мероприятие"
        private void AddInteractionButton_Click(object sender, RoutedEventArgs e)
        {
            MessageBox.Show("Функция добавления мероприятия будет реализована позже.");
        }

        // Обработчик кнопки "Добавить транзакцию"
        private void AddDealButton_Click(object sender, RoutedEventArgs e)
        {
            MessageBox.Show("Функция добавления транзакции будет реализована позже.");
        }

        // Обработчик кнопки "Аналитика продаж"
        private void ShowAnalyticsButton_Click(object sender, RoutedEventArgs e)
        {
            MessageBox.Show("Функция аналитики продаж будет реализована позже.");
        }
    }

    // Класс Client (модель данных)
    public class Client
    {
        public int Id { get; set; }
        public string Name { get; set; }
        public string Email { get; set; }
        public string Phone { get; set; }
        public DateTime Birthday { get; set; }
    }

    // Класс Interaction (мероприятия)
    public class Interaction
    {
        public int Id { get; set; }
        public int ClientId { get; set; }
        public string Type { get; set; } // Звонок, встреча, email
        public DateTime Date { get; set; }
        public string Notes { get; set; }
        public string ClientName { get; set; } // Имя клиента для отображения
    }

    // Класс Deal (транзакции)
    public class Deal
    {
        public int Id { get; set; }
        public int ClientId { get; set; }
        public string Description { get; set; }
        public decimal Amount { get; set; }
        public DateTime Date { get; set; }
        public string ClientName { get; set; } // Имя клиента для отображения
    }
}
